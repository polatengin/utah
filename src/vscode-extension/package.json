{
  "name": "utah",
  "displayName": "Utah Shell Extension",
  "description": "Language support for Utah shell scripts (.shx files)",
  "version": "0.0.1",
  "publisher": "polatengin",
  "author": {
    "name": "Engin Polat"
  },
  "license": "MIT",
  "icon": "assets/extension-icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/polatengin/utah.git"
  },
  "bugs": {
    "url": "https://github.com/polatengin/utah/issues"
  },
  "homepage": "https://github.com/polatengin/utah",
  "keywords": [
    "utah",
    "shell",
    "bash",
    "scripting",
    "shx",
    "syntax highlighting",
    "language server"
  ],
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "utah",
        "aliases": [
          "Utah",
          "utah"
        ],
        "extensions": [
          ".shx"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "utah",
        "scopeName": "source.utah",
        "path": "./syntaxes/utah.tmLanguage.json"
      }
    ],
    "iconThemes": [
      {
        "id": "utah-file-icons",
        "label": "Utah File Icons",
        "path": "./assets/file-icon-theme.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Utah Configuration",
      "properties": {
        "utah.server.path": {
          "type": "string",
          "default": "utah",
          "description": "Path to the Utah CLI executable"
        },
        "utah.server.args": {
          "type": "array",
          "default": ["lsp"],
          "description": "Arguments passed to the Utah CLI for LSP mode"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "esbuild": "node esbuild.js",
    "watch:esbuild": "node esbuild.js --watch",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "node esbuild.js --test && vscode-test",
    "pretest": "npm run compile && npm run lint"
  },
  "devDependencies": {
    "@types/mocha": "10.0.10",
    "@types/node": "24.3.0",
    "@types/vscode": "1.103.0",
    "@typescript-eslint/eslint-plugin": "8.41.0",
    "@typescript-eslint/parser": "8.40.0",
    "@vscode/test-cli": "0.0.11",
    "@vscode/test-electron": "2.5.2",
    "esbuild": "0.25.8",
    "eslint": "9.34.0",
    "npm-run-all": "4.1.5",
    "typescript": "5.9.2"
  },
  "dependencies": {
    "vscode-languageclient": "9.0.1"
  }
}
