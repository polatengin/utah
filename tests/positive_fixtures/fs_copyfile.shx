#!/usr/bin/env utah

// Test fs.copyFile() as both expression and statement

// Statement usage - copy a file
fs.copyFile("source.txt", "target.txt");

// Statement usage with variables
let sourcePath = "data/input.log";
let targetPath = "backup/input.log";
fs.copyFile(sourcePath, targetPath);

// Expression usage - check if copy was successful
let success = fs.copyFile("config.json", "settings/config.json");
console.log(success);

// Expression usage in conditional
if (fs.copyFile("template.html", "public/index.html")) {
  console.log("File copied successfully");
} else {
  console.log("File copy failed");
}

// Copy to nested directory
fs.copyFile("README.md", "docs/project/README.md");

// Using expressions as paths
let filename = "important.txt";
let backupDir = "backups";
fs.copyFile(filename, backupDir + "/" + filename);
